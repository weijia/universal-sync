{
  "name": "universal-sync",
  "version": "0.1.0",
  "description": "A browser-based JavaScript library for synchronizing data across multiple backends",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "docs": "typedoc src/index.ts",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "start": "http-server -c-1 -o /examples/basic-usage.html"
  },
  "keywords": [
    "sync",
    "pouchdb",
    "webdav",
    "remotestorage",
    "datapod",
    "google-drive",
    "dropbox"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "pouchdb": "^7.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/pouchdb": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "pouchdb": "^7.3.0",
    "pouchdb-authentication": "^1.1.3",
    "webdav": "^5.8.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14.0.0"
  }
}
